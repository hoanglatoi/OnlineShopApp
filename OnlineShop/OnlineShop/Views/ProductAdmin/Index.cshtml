@model IEnumerable<OnlineShop.Model.Models.ProductCategory>

@{
    ViewData["Title"] = "ProductCategory For Admin";
    Layout = "_AdminLayout";
}

<head>
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" />
</head>

<div class="row">
    <div class="col-sm-6">
        <h1>Danh Sách Sản Phẩm</h1>
    </div>
    <div class="col-sm-6">
        <button class="CreateBtn" asp-action="Create">
            <i class="bi bi-plus-square"></i> Thêm Sản Phẩm Mới
        </button>
    </div>
</div>

<form asp-controller="ProductAdmin" asp-action="Index" method="get" style="padding-top: 20px">
    <p class="search-container">
        Tên Danh Mục: 
        <input type="text" name="SearchString" />
        <button class="btn btn-search-container" type="submit">Tìm Danh Mục</button>
        <button asp-action="Index" class="btn btn-search-container">Xem Tất Cả Danh Mục</button>
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Tên Danh Mục
            </th>
            <th>
                Tiêu Đề
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ID)
                </td>
                <td>
                    <a asp-action="IndexProducts" asp-route-id="@item.Name">@Html.DisplayFor(modelItem => item.Name)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MetaTitle)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID">Sửa Thông Tin</a> |
                    <a asp-action="ViewDetails" asp-route-id="@item.ID">Chi Tiết</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">Xóa Danh Mục</a>
                </td>
            </tr>
        }
    </tbody>
</table>