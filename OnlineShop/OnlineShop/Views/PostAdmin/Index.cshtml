@model IEnumerable<OnlineShop.Model.Models.PostContent>

@{
    ViewData["Title"] = "Post For Admin";
    Layout = "_AdminLayout";
}

<h1>Danh Sách Bài Viết</h1>

<p>
    <a asp-action="Create">Tạo Bài Viết Mới</a>
</p>

<form asp-controller="PostAdmin" asp-action="Index" method="get">
    <p>
        Tên Bài Viết: <input type="text" name="SearchString" />
        <input class="btn btn-primary" type="submit" value="Tìm Bài Viết" />
        <a asp-action="Index" class="btn btn-primary">Xem Tất Cả Bài Viết</a>
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MetaTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Detail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ViewCount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MetaTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Detail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ViewCount)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID">Sửa Bài</a> |
                    <a asp-action="ViewDetails" asp-route-id="@item.ID">Chi Tiết</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">Xóa Bài</a>
                </td>
            </tr>
        }
    </tbody>
</table>