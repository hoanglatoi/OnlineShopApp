@model OnlineShop.Model.Models.PostContent
@{
    ViewData["Title"] = "Delete Post For Admin";
    Layout = "_AdminLayout";
}
<html>
    <body>
    <h1>Delete</h1>
    <h3>Bạn Có Chắc Chắn Muốn Xóa Bài Viết Này?</h3>
    <div>
        <h4>Bài Viết</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ID)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ID)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.MetaTitle)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.MetaTitle)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Tags)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Tags)
            </dd>
        </dl>

        <form asp-action="DeletePost">
            <input type="hidden" asp-for="ID" />
            <input type="submit" value="Delete" class="btn btn-danger"/> ||
            <a asp-action="IndexPost" asp-route-id="@Model.CategoryID" class="btn btn-primary">Trở Về Trang Danh Sách Bài Viết</a>
        </form>
    </div>
    </body>
</html>
